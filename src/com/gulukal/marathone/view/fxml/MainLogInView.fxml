<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.Cursor?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ButtonBar?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<BorderPane prefHeight="400.0" prefWidth="800.0" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.gulukal.marathone.view.appController.LogInViewController">
   <left>
      <AnchorPane prefHeight="400.0" prefWidth="400.0" style="-fx-background-color: #21303A; -fx-border-color: EBE7D9;" BorderPane.alignment="CENTER">
         <children>
            <ImageView fitHeight="163.0" fitWidth="229.0" layoutX="86.0" layoutY="129.0" pickOnBounds="true" preserveRatio="true">
               <image>
                  <Image url="@./Logo.png" />
               </image>
            </ImageView>
         </children>
      </AnchorPane>
   </left>
   <right>
      <AnchorPane prefHeight="400.0" prefWidth="400.0" style="-fx-background-color: EBE7D9;" BorderPane.alignment="CENTER">
         <children>
            <PasswordField fx:id="password" layoutX="162.0" layoutY="174.0" prefHeight="25.0" prefWidth="160.0" promptText="password" style="-fx-background-color: EBE7D9; -fx-border-color: #21303A;">
               <font>
                  <Font name="Yu Gothic Light" size="12.0" />
               </font></PasswordField>
            <Text fill="#21303a" layoutX="38.0" layoutY="195.0" strokeType="OUTSIDE" strokeWidth="0.0" text="Password">
               <font>
                  <Font name="Century Gothic" size="14.0" />
               </font></Text>
            <Text fill="#21303a" layoutX="38.0" layoutY="151.0" strokeType="OUTSIDE" strokeWidth="0.0" text="Mail">
               <font>
                  <Font name="Century Gothic" size="14.0" />
               </font></Text>
            <ButtonBar layoutX="140.0" layoutY="211.0" prefHeight="36.0" prefWidth="150.0">
              <buttons>
                <Button fx:id="cancel" mnemonicParsing="false" onMouseClicked="#cancelAction" style="-fx-background-color: EBE7D9; -fx-border-color: #21303A;" text="CLOSE" textFill="#21303a">
                     <cursor>
                        <Cursor fx:constant="DEFAULT" />
                     </cursor>
                     <font>
                        <Font name="Century Gothic" size="12.0" />
                     </font>
                  </Button>
                  <Button fx:id="commit" layoutX="135.0" layoutY="18.0" mnemonicParsing="false" onMouseClicked="#commitAction" style="-fx-background-color: EBE7D9; -fx-border-color: #21303A;" text="LOGIN" textFill="#21303a">
                     <font>
                        <Font name="Century Gothic" size="12.0" />
                     </font></Button>
              </buttons>
            </ButtonBar>
            <TextField fx:id="mail" layoutX="162.0" layoutY="130.0" prefHeight="25.0" prefWidth="160.0" promptText="mail" style="-fx-background-color: EBE7D9; -fx-border-color: #21303A;">
               <font>
                  <Font name="Yu Gothic Light" size="12.0" />
               </font>
            </TextField>
            <ButtonBar layoutX="134.0" layoutY="253.0" prefHeight="36.0" prefWidth="187.0">
               <buttons>
                  <Button fx:id="newUser" mnemonicParsing="false" onMouseClicked="#newUserAction" prefHeight="26.0" prefWidth="161.0" style="-fx-background-color: EBE7D9; -fx-border-color: #21303A;" text="NEW USER ?" textFill="#21303a">
                     <cursor>
                        <Cursor fx:constant="DEFAULT" />
                     </cursor>
                     <font>
                        <Font name="Century Gothic" size="12.0" />
                     </font>
                  </Button>
               </buttons>
            </ButtonBar>
         </children>
      </AnchorPane>
   </right>
</BorderPane>
